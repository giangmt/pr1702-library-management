<h2><%= t ".all_books" %></h2>
<table class="table table-hover">
  <%= link_to t(".add"), {action: "new"}, class: "add-book btn btn-primary" %>
  <thead class="table-title">
    <tr>
      <th><%= t ".id" %></th>
      <th><%= t ".image" %></th>
      <th><%= t ".title" %></th>
      <th><%= t ".page" %></th>
      <th><%= t ".category" %></th>
      <th><%= t ".publisher" %></th>
      <th><%= t ".description" %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= image_tag book.image, id: "admin-image-book" %></td>
        <td><%= book.name %></td>
        <td><%= book.page %></td>
        <td><%= book.category.name %></td>
        <td><%= book.publisher.name %></td>
        <td><%= book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @books %>
