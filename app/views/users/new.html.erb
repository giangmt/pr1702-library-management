<% provide :title, t(".signup") %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center"><%= t ".signup" %></h1>
      <%= form_for @user, url: signup_path  do |f| %>
        <%= render "shared/error_messages", object: @user %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, t(".confirm") %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit t(".create"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
